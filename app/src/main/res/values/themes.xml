<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Comandas" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Comandas" parent="Base.Theme.Comandas" />

    <style name="small" parent="Theme.Comandas">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="login_button">
        <item name="backgroundTint">@color/teal</item>
        <item name="android:radius">0dp</item>
    </style>
    <style name="WelcomeText">
        <item name="android:fontFamily">cursive</item>
        <item name="android:fontWeight">900</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">50dp</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="OBText">
        <item name="android:fontFamily">cursive</item>
        <item name="android:fontWeight">900</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">36dp</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="WelcomeText1">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">cursive</item>
    </style>
    <style name="bottonwelcome">
<item name="android:backgroundTint">@color/teal</item>
    </style>

    <style name="border">
        <item name="android:radius">10dp</item>
        <item name="strokeColor">@color/teal</item>
        <item name="android:solidColor">@color/black</item>
    </style>



</resources>