<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<FrameLayout
    android:id="@+id/textbalance"
    android:background="@color/blackgray"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="90dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="200dp"

    />
<FrameLayout
        android:id="@+id/balance"
        android:background="@color/blackgray"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="240dp"

/>


    <FrameLayout
        android:id="@+id/textquantity"
        android:background="@color/blackgray"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/balance"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="200dp"
        />
    <FrameLayout
        android:id="@+id/quantity"
        android:background="@color/blackgray"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/textquantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        />

    <FrameLayout
        android:id="@+id/text1"
        android:background="@color/blackgray"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/quantity"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="200dp"

        />
    <FrameLayout
        android:id="@+id/text2"
        android:background="@color/blackgray"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/quantity"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="240dp"

        />
    <FrameLayout
        android:id="@+id/resumen"
        android:background="@color/blackgray"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        />

    <FrameLayout
        android:id="@+id/pay"
        android:background="@color/blackgray"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="@id/resumen"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="200dp"

        />
    <FrameLayout
        android:id="@+id/numberpay"
        android:background="@color/blackgray"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="@id/resumen"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="240dp"

        />
    <FrameLayout
        android:id="@+id/a"
        android:background="@color/blackgray"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="@id/numberpay"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="200dp"

        />
    <FrameLayout
        android:id="@+id/destinatario"
        android:background="@color/blackgray"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="@id/numberpay"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="240dp"

        />
    <FrameLayout
        android:id="@+id/monto"
        android:background="@color/blackgray"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="@id/destinatario"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="240dp"

        />
    <FrameLayout
        android:id="@+id/fecha"
        android:background="@color/blackgray"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="@id/monto"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="240dp"

        />
</androidx.constraintlayout.widget.ConstraintLayout>